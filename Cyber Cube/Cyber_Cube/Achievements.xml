<?xml version="1.0" encoding="utf-8" ?>
<AchievementManager>
  <Achievements>
    <!-- List of achievements in the entire game -->
    <!-- Jump 10 Times Achievement -->
    <Achievement>
      <!-- Value in points of the achievement -->
      <Value>5</Value>
      <!-- Title of the achievement in-game -->
      <Title>Jump 10 Times</Title>
      <!-- List of requirements to fulfill to accomplish the achievement -->
      <Requirements>
        <Requirement>
          <AssociatedStat>Jump</AssociatedStat>
          <Goal>>10</Goal>
        </Requirement>
      </Requirements>
    </Achievement>
    <!-- Don't Jump Achievement -->
    <Achievement>
      <Value>3</Value>
      <Title>Don't Jump</Title>
      <Requirements>
        <Requirement>
          <AssociatedStat>Jump</AssociatedStat>
          <Goal>=0</Goal>
        </Requirement>
      </Requirements>
    </Achievement>
  </Achievements>
</AchievementManager>